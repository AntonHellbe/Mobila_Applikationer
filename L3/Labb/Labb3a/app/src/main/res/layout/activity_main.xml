    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.antonhellbegmail.labb3a.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.antonhellbegmail.labb3a.ViewerFragment"
        android:id="@+id/fragment_viewer"
        tools:layout="@layout/fragment_viewer" />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.antonhellbegmail.labb3a.InputFragment"
        android:id="@+id/fragment_input"
        tools:layout="@layout/fragment_input" />

</LinearLayout>
